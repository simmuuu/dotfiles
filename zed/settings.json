// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
    // ========================================
    // SSH
    // ========================================

    "sticky_scroll": {
        "enabled": true,
    },
    "disable_ai": true,
    "outline_panel": {
        "folder_icons": true,
    },

    // ========================================
    // APPEARANCE & THEME
    // ========================================

    "theme": "Gruvbox Dark Hard",
    "icon_theme": "Material Icon Theme",
    "ui_font_size": 16.0,
    "ui_font_family": "JetBrainsMono Nerd Font Mono",
    "theme_overrides": {
        "Gruvbox Dark Hard": {
            "syntax": {
                "comment": { "color": "#928374", "font_style": "italic" },
                "comment.doc": { "color": "#a89984", "font_style": "italic" },

                "constant": { "color": "#d3869b" },
                "function": { "color": "#b8bb26", "font_weight": 700 },
                "function.method": { "color": "#b8bb26", "font_weight": 700 },
                "keyword": { "color": "#fb4934", "font_style": "italic" },
                "property": { "color": "#83a598" },
                "punctuation.list_marker": { "color": "#fe8019" },
                "punctuation.special": { "color": "#fe8019" },
                "string": { "color": "#b8bb26" },
                "type": { "color": "#fabd2f" },
                // "variable": { "color": "#83a598" }
            },
        },
    },

    // ========================================
    // EDITOR CONFIGURATION
    // ========================================
    "buffer_font_size": 16,
    "buffer_font_family": "JetBrainsMono Nerd Font",
    "vim_mode": false,
    "relative_line_numbers": "disabled",
    "autosave": "off",
    "format_on_save": "on",
    "tab_size": 4,
    "soft_wrap": "preferred_line_length",
    "preferred_line_length": 120,
    "show_whitespaces": "selection",
    "show_edit_predictions": false,
    "hide_mouse": "on_typing_and_movement",
    "tab_bar": { "show": true },

    "git": {
        "git_gutter": "tracked_files",
        "inline_blame": {
            "enabled": true,
        },
        "hunk_style": null,
    },

    // "inlay_hints": {
    //     "enabled": true
    // },

    // "indent_guides": {
    //     "enabled": true,
    //     "coloring": "fixed"
    // },

    // ========================================
    // TERMINAL CONFIGURATION
    // ========================================
    "terminal": {
        "font_family": "JetBrainsMono Nerd Font",
        "font_size": 15,
        "line_height": "comfortable",
        "blinking": "off",
    },

    // ========================================
    // PROJECT PANEL
    // ========================================
    "project_panel": {
        "auto_fold_dirs": true,
        "hide_root": true,
        "file_icons": true,
        "entry_spacing": "comfortable",
        "hide_gitignore": false,
        "default_width": 240.0,
        "dock": "left",
        "git_status": true,
        "folder_icons": true,
    },
    // "file_finder": {
    //     "modal_max_width": "medium",
    // },

    // ========================================
    // LANGUAGE-SPECIFIC SETTINGS
    // ========================================
    "languages": {
        "JSON": {
            "tab_size": 2,
        },
        "JavaScript": {
            "tab_size": 2,
        },
        "TypeScript": {
            "tab_size": 2,
        },
        "C++": {
            "tab_size": 4,
        },
        "JSX": {
            "tab_size": 2,
        },
        "TSX": {
            "tab_size": 2,
        },
        "SQL": {
            "tab_size": 2,
        },
        "YAML": {
            "tab_size": 2,
        },
        "Go": {
            "tab_size": 4,
            "formatter": {
                "external": {
                    "command": "gofmt",
                    "arguments": [],
                },
            },
        },
    },

    "lsp": {
        "jdtls": {
            "initialization_options": {},
        },
    },

    // ========================================
    // AI AGENT CONFIGURATION
    // ========================================
    "agent": {
        "default_model": {
            "provider": "copilot_chat",
            "model": "gpt-5-mini",
        },
        "default_profile": "write",
        "model_parameters": [],
    },

    // ========================================
    // COLLABORATION & COPILOT
    // ========================================
    "collaboration_panel": {
        "button": false,
    },

    // ========================================
    // PRIVACY & TELEMETRY
    // ========================================
    "telemetry": {
        "diagnostics": false,
        "metrics": false,
    },
}
